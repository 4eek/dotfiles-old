# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

# general
alias ..='cd ..'
alias a='ls -lrth'
alias aliases='vim ~/.dotfiles/zsh/aliases'
alias d='cd ~/.dotfiles'
alias so='source ~/.dotfiles/zsh/aliases'
alias get='sudo apt-get install'
alias la="ls -A -l -G"
alias c='clear'
alias cdd='cd -'  # goto last dir cd'ed from
alias cl='clear; l'
function cdc() { 
    cd $1; ls 
}
alias cls='clear; ls'
alias h='history'
alias l.='ls -d .[^.]*'
alias l='ls -lhGt'  # -l long listing, most recent first
                    # -G color
alias lh="ls -lh"
alias ll='ls -lhG'  # -l long listing, human readable, no group info
alias lt='ls -lt' # sort with recently modified first
alias md='mkdir -p'

# git
alias gl='git pull'
alias gp='git push'
alias gph='git push heroku master'
alias gphd='git push heroku-demo demo:master'
alias gnp="git-notpushed"
alias gd='git diff | gitx'
alias gdm='git diff master | gitx'
alias gcx='gitx -c'
alias gx='gitx --all'
alias gt='gittower -s'
alias gct='gittower'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias g='git status'
alias gcm='git commit -m'
alias gdc='git diff --cached | gitx'
alias gg='git lg'
alias gm='git merge'
alias ungit="find . -name '.git' -exec rm -rf {} \;"
alias gmrc="gitx --left-right origin/master...HEAD"
alias gerc="gitx --left-right origin/edge...HEAD"
# Git clone from GitHub
function gch() {
  git clone git://github.com/$USER/$1.git
}
# Setup a tracking branch from [remote] [branch_name]
function gbt() { 
  git branch --track $2 $1/$2 && git checkout $2 
}
# Quickly clobber a file and checkout
function grf() { 
  rm $1
  git checkout $1 
}
# Call from inside an initialized Git repo, with the name of the repo.
function new-git() {
  ssh git@example.com "mkdir $1.git && cd $1.git && git --bare init"
  git remote add origin git@example.com:$1.git
  git push origin master
  git config branch.master.remote origin
  git config branch.master.merge refs/heads/master
  git config push.default current
}

